<% cache do %>
  <% sleep 2 %>
  <h1>Contact Us</h1>
<% end %>

<p>Email us with any question or concerns</p>
<div class="email">
    <a href="mailto:thebikestore@gmail.com">thebikestore@gmail.com</a>
</div>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="form-group">
        <%= label_tag(:name) %>
        <%= text_field_tag(:name, "", class: "form-control", placeholder: "Enter Name", required: true) %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= label_tag(:email, "Email Address") %>
        <%= text_field_tag(:email, "", class: "form-control", placeholder: "Enter Email",  type: "email", required: true) %>
      </div>
    </div>
    <div class="col col-md-8 col-md-offset-2">
      <div class="form-group">
        <%= label_tag(:message) %>
        <%= text_area_tag(:message, "", class: "form-control", placeholder: "Enter Message", required: true) %>
      </div>        
    </div>
  </div>
  <div class= "col-md-4 col-md-offset-2">
    <%= submit_tag("Send", class: "btn btn-primary") %>
  </div>
<% end %>

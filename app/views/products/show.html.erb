<p id="notice"><%= notice %></p>

<div class="container">
<div class="row product_page">
<div class="col-md-4">
<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
</p>
</div>
<div class="col-md-4 col-md-offset-1 panel panel-default">
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>


<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Colour:</strong>
  <%= @product.colour %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  </strong>Average Rating: </strong>
  <div class="rated" data-score="<%= @product.average_rating %>"></div> 
</p>
</div>

<div class="col-md-6 col-md-offset-3">
<%= @product.highest_rating_comment %>
<%= @product.lowest_rating_comment %>
</div>

</div>

<%= render "new_comment" %>
<%= render "comments" %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div>
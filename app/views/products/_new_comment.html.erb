<div class="row">
    <div class="col-md-4">
<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
      <div class="form-group">
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body,  class:"form-control" %>
      </div>
    </p>
    <p>
      <div class="rating"></div>
    </p>  
    <p>
      <%= f.submit "Submit", class: "btn btn-primary"%>
    </p>
  <% end %>
<% end %>
</div>
</div>